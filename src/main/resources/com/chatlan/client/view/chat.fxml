<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatlan.client.controller.ChatController"
            style="-fx-background-color:#f4f4f4;">

    <!-- ====== Liste des utilisateurs connectés ====== -->
    <left>
        <VBox spacing="10" style="-fx-padding:10;">
            <Label text="Utilisateurs connectés" style="-fx-font-weight:bold;"/>
            <ListView fx:id="userList" prefWidth="180" onMouseClicked="#openPrivateChat"/>
        </VBox>
    </left>

    <!-- ====== Zone de chat ====== -->
    <center>
        <VBox spacing="10" style="-fx-padding:10;">
            <Label text="Discussion de groupe" style="-fx-font-weight:bold;"/>

            <TextArea fx:id="chatArea"
                      editable="false"
                      wrapText="true"
                      prefHeight="350"/>

            <HBox spacing="10">
                <TextField fx:id="messageField"
                           promptText="Écrire un message..."
                           HBox.hgrow="ALWAYS"/>
                <Button text="Envoyer"
                        onAction="#sendMessage"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
